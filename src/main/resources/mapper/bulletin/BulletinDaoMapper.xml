<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.ixinhoo.shopping.dao.bulletin.BulletinDao">

    <resultMap id="beanMap" type="com.ixinhoo.shopping.entity.bulletin.Bulletin" extends="com.ixinhoo.api.entity.AuditEntity" >
		<result column="btitle" property="btitle" />
		<result column="status" property="status"  />
		<result column="description" property="description"  />
		<result column="url" property="url" />
        <result column="sort" property="sort" />
	</resultMap>
<!-- 表名称 -->
	<sql id="table_name">bulletin</sql>

	<!--集合显示的属性-->
	<sql id="base_column_list">
		id ,
		btitle,
		status ,
		description,
		url,
		sort
	</sql>

	<!-- 基本的查询条件-->
	<sql id="base_where_clause">
		<where>
			<trim prefixOverrides="and">
				<if test="name != null and name !=''"> AND name = #{name}</if>
			</trim>
		</where>
		<if test="ccSort != null and ccSort != ''">
			ORDER BY  ${ccField} ${ccSort}
		</if>

	</sql>

	<sql id="base_where_clause_limit">
		<include refid="base_where_clause" />
		<if test="ccStart != null and ccEnd != null">
			LIMIT #{ccStart}, #{ccEnd}
		</if>
	</sql>
   
	<select id="select" resultMap="beanMap" parameterType="java.util.Map">
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		
	</select>

	<update id="updateById" parameterType="com.ixinhoo.shopping.entity.bulletin.Bulletin">
		update <include refid="table_name" />
		<set>
			updateId = #{updateId},
			updateTime = #{updateTime},
			btitle = #{btitle},
			description = #{description},
			sort = #{sort},
			status = #{status},
			url=#{url}
			
		</set>
		<where>
			id = #{id}
		</where>
	</update>
	
	<delete id="deleteById" >
		DELETE FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</delete>
	
	<insert id="insert" parameterType="com.ixinhoo.shopping.entity.bulletin.Bulletin">
		INSERT INTO <include refid="table_name" />(
		id,
		createId,
		createTime,
		updateId,
		updateTime,
		btitle,
		status,
		description,
		url,
		sort
		)
		VALUES (
		#{id},
		#{createId},
		#{createTime},
		#{updateId},
		#{updateTime},
		#{btitle},
		#{status},
		#{description},
		#{url},
		#{sort}
		)
	</insert>
</mapper>