<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.ixinhoo.shopping.dao.setting.CouponSettingDao">

    <resultMap id="beanMap" type="com.ixinhoo.shopping.entity.setting.CouponSetting" extends="com.ixinhoo.api.entity.AuditEntity" >
		<result column="name" property="name" />
		<result column="condition_price" property="conditionPrice"  />
		<result column="reduce_price" property="reducePrice"  />
		<result column="type" property="type"  />

	</resultMap>

	<sql id="table_name">coupon_setting</sql>

	<!--集合显示的属性-->
	<sql id="base_column_list">
		id ,
		name,
		condition_price ,
		reduce_price,
		type
	</sql>

	<!-- 基本的查询条件-->
	<sql id="base_where_clause">
		<where>
			<trim prefixOverrides="AND">
				<if test="type != null "> AND type = #{type}</if>
				<if test="name != null and name !=''"> AND name = #{name}</if>
			</trim>
		</where>
		<if test="ccSort != null and ccSort != ''">
			ORDER BY ${ccField} ${ccSort}
		</if>

	</sql>

	<sql id="base_where_clause_limit">
		<include refid="base_where_clause" />
		<if test="ccStart != null and ccEnd != null and ccEnd != 0">
			LIMIT #{ccStart}, #{ccEnd}
		</if>
	</sql>

	<select id="select" resultMap="beanMap" parameterType="java.util.Map">
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<include refid="base_where_clause_limit" />
	</select>

	<select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
		SELECT count(id)
		FROM <include refid="table_name" />
		<include refid="base_where_clause" />
	</select>
	<select id="selectById" resultMap="beanMap" >
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</select>

	<select id="selectCommonOrId" resultMap="beanMap" >
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<where>
			type = #{type}
			<if test="id != null and id !=0 ">
				OR id=#{id}
			</if>
		</where>
	</select>



	<insert id="insert" parameterType="com.ixinhoo.shopping.entity.setting.CouponSetting">
		INSERT INTO <include refid="table_name" />(
		id,
		create_id,
		create_time,
		update_id,
		update_time,
		name,
		condition_price ,
		reduce_price,
		type
		)
		VALUES (
		#{id},
		#{createId},
		#{createTime},
		#{updateId},
		#{updateTime},
		#{name},
		#{conditionPrice},
		#{reducePrice},
		#{type}
		)
	</insert>

	<delete id="deleteById" >
		DELETE FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</delete>
	<update id="updateById" parameterType="com.ixinhoo.shopping.entity.setting.CouponSetting">
		UPDATE <include refid="table_name" />
		<set>
			update_id = #{updateId},
			update_time = #{updateTime},
			name = #{name},
			condition_price = #{conditionPrice},
			reduce_price = #{reducePrice},
			type = #{type}
		</set>
		<where>
			id = #{id}
		</where>
	</update>



</mapper>