<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.ixinhoo.shopping.dao.setting.HomeBannerSettingDao">

    <resultMap id="beanMap" type="com.ixinhoo.shopping.entity.setting.HomeBannerSetting" extends="com.ixinhoo.api.entity.AuditEntity" >
		<result column="name" property="name" />
		<result column="link" property="link"  />
		<result column="status" property="status"  />
		<result column="remark" property="remark"  />
		<result column="sort" property="sort"  />
		<result column="image" property="image"  />
	</resultMap>

	<sql id="table_name">home_banner_setting</sql>

	<!--集合显示的属性-->
	<sql id="base_column_list">
		id ,
		name,
		link ,
		status,
		remark,
		sort,
		image
	</sql>

	<!-- 基本的查询条件-->
	<sql id="base_where_clause">
		<where>
			<trim prefixOverrides="AND">
				<if test="status != null and status !=''"> AND status = #{status}</if>
			</trim>
		</where>
		<if test="ccSort != null and ccSort != ''">
			ORDER BY ${ccField} ${ccSort}
		</if>

	</sql>

	<sql id="base_where_clause_limit">
		<include refid="base_where_clause" />
		<if test="ccStart != null and ccEnd != null and ccEnd != 0">
			LIMIT #{ccStart}, #{ccEnd}
		</if>
	</sql>

	<select id="select" resultMap="beanMap" parameterType="java.util.Map">
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<include refid="base_where_clause_limit" />
	</select>

	<select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
		SELECT COUNT(id)
		FROM <include refid="table_name" />
		<include refid="base_where_clause" />
	</select>
	<select id="selectById" resultMap="beanMap" >
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</select>


	<insert id="insert" parameterType="com.ixinhoo.shopping.entity.setting.HomeBannerSetting">
		INSERT INTO <include refid="table_name" />(
		id,
		create_id,
		create_time,
		update_id,
		update_time,
		name,
		link ,
		status,
		remark,
		sort,
		image
		)
		VALUES (
		#{id},
		#{createId},
		#{createTime},
		#{updateId},
		#{updateTime},
		#{name},
		#{link},
		#{status},
		#{remark},
		#{sort},
		#{image}
		)
	</insert>

	<delete id="deleteById" >
		DELETE FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</delete>
	<update id="updateById" parameterType="com.ixinhoo.shopping.entity.setting.HomeBannerSetting">
		UPDATE <include refid="table_name" />
		<set>
			update_id = #{updateId},
			update_time = #{updateTime},
			name = #{name},
			link = #{link},
			status = #{status},
			sort = #{sort},
			image = #{image},
			remark = #{remark}
		</set>
		<where>
			id = #{id}
		</where>
	</update>



</mapper>