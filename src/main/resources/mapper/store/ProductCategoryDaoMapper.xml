<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.ixinhoo.shopping.dao.store.ProductCategoryDao">

    <resultMap id="beanMap" type="com.ixinhoo.shopping.entity.store.ProductCategory" extends="com.ixinhoo.api.entity.AuditEntity" >
		<result column="name" property="name" />
		<result column="category_id" property="categoryId"  />
		<result column="category_name" property="categoryName"  />
		<result column="product_id" property="productId"  />

	</resultMap>

	<sql id="table_name">product_category</sql>

	<!--集合显示的属性-->
	<sql id="base_column_list">
		id ,
		name,
		category_id ,
		category_name ,
		product_id
	</sql>

	<!-- 基本的查询条件-->
	<sql id="base_where_clause">
		<where>
			<trim prefixOverrides="AND">
				<if test="productId != null and productId!=''"> AND product_id = #{productId}</if>
				<if test="status != null and status!=''"> AND status = #{status}</if>
			</trim>
		</where>
		<if test="ccSort != null and ccSort != ''">
			ORDER BY  ${ccField} ${ccSort}
		</if>

	</sql>

	<sql id="base_where_clause_limit">
		<include refid="base_where_clause" />
		<if test="ccStart != null and ccEnd != null and ccEnd != 0">
			LIMIT #{ccStart}, #{ccEnd}
		</if>
	</sql>

	<select id="select" resultMap="beanMap" parameterType="java.util.Map">
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<include refid="base_where_clause_limit" />
	</select>

	<select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
		SELECT count(id)
		FROM <include refid="table_name" />
		<include refid="base_where_clause" />
	</select>
	<select id="selectById" resultMap="beanMap" >
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</select>

	<select id="selectByProductId" resultMap="beanMap" >
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<where>
			product_id = #{productId}
		</where>
	</select>



	<insert id="insert" parameterType="com.ixinhoo.shopping.entity.setting.CouponSetting">
		INSERT INTO <include refid="table_name" />(
		id,
		create_id,
		create_time,
		update_id,
		update_time,
		name,
		product_id ,
		category_id,
		category_name
		)
		VALUES (
		#{id},
		#{createId},
		#{createTime},
		#{updateId},
		#{updateTime},
		#{name},
		#{productId},
		#{categoryId},
		#{categoryName}
		)
	</insert>

	<delete id="deleteById" >
		DELETE FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</delete>

	<delete id="deleteByProductId" >
		DELETE FROM <include refid="table_name" />
		<where>
			product_id = #{productId}
		</where>
	</delete>
	<update id="updateById" parameterType="com.ixinhoo.shopping.entity.setting.CouponSetting">
		UPDATE <include refid="table_name" />
		<set>
			update_id = #{updateId},
			update_time = #{updateTime},
			name = #{name},
			product_id = #{productId},
			category_name = #{categoryName},
			category_id = #{categoryId}
		</set>
		<where>
			id = #{id}
		</where>
	</update>



</mapper>