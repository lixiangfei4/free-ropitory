<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.ixinhoo.shopping.dao.user.MessageCodeDao">

    <resultMap id="beanMap" type="com.ixinhoo.shopping.entity.user.MessageCode" extends="com.ixinhoo.api.entity.IdEntity" >
		<result column="phone" property="phone" />
		<result column="code" property="code" />
		<result column="massage" property="massage"  />
		<result column="status" property="status"  />
		<result column="send_time" property="sendTime" />
		<result column="invalid_time" property="invalidTime" />

	</resultMap>

	<sql id="table_name">message_code</sql>

	<!--集合显示的属性-->
	<sql id="base_column_list">
		id ,
		phone,
		message ,
		code ,
		status,
		send_time,
		invalid_time
	</sql>

	<!-- 基本的查询条件-->
	<sql id="base_where_clause">
		<where>
			<trim prefixOverrides="and">
				<if test="status != null and status !=''"> AND status = #{status}</if>
				<if test="phone != null and phone !='' ">AND phone = #{phone}</if>

				<!-- 模糊查询 -->
				<if test="phoneLike != null and phoneLike!=''">AND phone LIKE CONCAT("%",#{phoneLike},"%")</if>
			</trim>
		</where>
		<if test="ccSort != null and ccSort != ''">
			ORDER BY  ${ccField} ${ccSort}
		</if>

	</sql>

	<sql id="base_where_clause_limit">
		<include refid="base_where_clause" />
		<if test="ccStart != null and ccEnd != null">
			LIMIT #{ccStart}, #{ccEnd}
		</if>
	</sql>

	<select id="select" resultMap="beanMap" parameterType="java.util.Map">
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<include refid="base_where_clause_limit" />
	</select>

	<select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
		SELECT count(id)
		FROM <include refid="table_name" />
		<include refid="base_where_clause" />
	</select>
	<select id="selectById" resultMap="beanMap" >
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</select>


	<select id="selectByPhoneAndTime" resultMap="beanMap" >
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<where>
			phone = #{phone} AND status='ENABLE'
			AND invalid_time > #{invalidTime}
			AND type=#{type}
			ORDER BY invalid_time DESC LIMIT 0,1
		</where>
	</select>

	<insert id="insert" parameterType="com.ixinhoo.shopping.entity.user.MessageCode">
		INSERT INTO <include refid="table_name" />(
		id,
		phone,
		message ,
		code ,
		status,
		send_time,
		invalid_time,
		type
		)
		VALUES (
		#{id},
		#{phone},
		#{message},
		#{code},
		#{status},
		#{sendTime},
		#{invalidTime},
		#{type}
		)
	</insert>

	<delete id="deleteById" >
		DELETE FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</delete>
	<update id="updateById" parameterType="com.ixinhoo.shopping.entity.user.MessageCode">
		UPDATE <include refid="table_name" />
		<set>
			phone = #{phone},
			message = #{message},
			code = #{code},
			status = #{status},
			send_time = #{sendTime},
			type = #{type},
			invalid_time = #{invalidTime}
		</set>
		<where>
			id = #{id}
		</where>
	</update>



</mapper>