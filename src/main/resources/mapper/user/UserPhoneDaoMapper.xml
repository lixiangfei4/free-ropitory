<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.ixinhoo.shopping.dao.user.UserPhoneDao">

    <resultMap id="beanMap" type="com.ixinhoo.shopping.entity.user.UserPhone" extends="com.ixinhoo.api.entity.IdEntity" >
		<result column="phone" property="phone" />
		<result column="user_id" property="userId"  />
		<result column="time" property="time" />
	</resultMap>

	<sql id="table_name">user_phone</sql>

	<!--集合显示的属性-->
	<sql id="base_column_list">
		id ,
		phone,
		user_id ,
		phone
	</sql>

	<!-- 基本的查询条件-->
	<sql id="base_where_clause">
		<where>
			<trim prefixOverrides="and">
				<if test="phone != null and phone !='' ">AND phone = #{phone}</if>
			</trim>
		</where>
		<if test="ccSort != null and ccSort != ''">
			ORDER BY  ${ccField} ${ccSort}
		</if>

	</sql>

	<sql id="base_where_clause_limit">
		<include refid="base_where_clause" />
		<if test="ccStart != null and ccEnd != null">
			LIMIT #{ccStart}, #{ccEnd}
		</if>
	</sql>

	<select id="select" resultMap="beanMap" parameterType="java.util.Map">
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<include refid="base_where_clause_limit" />
	</select>

	<select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
		SELECT count(id)
		FROM <include refid="table_name" />
		<include refid="base_where_clause" />
	</select>
	<select id="selectById" resultMap="beanMap" >
		SELECT
		<include refid="base_column_list" />
		FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</select>


	<insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="com.ixinhoo.shopping.entity.user.UserPhone">
		INSERT INTO <include refid="table_name" />(
		id,
		phone,
		user_id ,
		time
		)
		VALUES (
		#{id},
		#{phone},
		#{userId},
		#{time}
		)
	</insert>

	<delete id="deleteById" >
		DELETE FROM <include refid="table_name" />
		<where>
			id = #{id}
		</where>
	</delete>
	<update id="updateById" parameterType="com.ixinhoo.shopping.entity.user.UserPhone">
		UPDATE <include refid="table_name" />
		<set>
			phone = #{phone},
			time = #{time},
			user_id = #{userId}
		</set>
		<where>
			id = #{id}
		</where>
	</update>



</mapper>